{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Upload Current MD to Confluence",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/.vscode/scripts/upload_workflow.py",
                "${file}",
                "${fileBasenameNoExtension}",
                "11763773",
                "~B030240",
                "${env:CONFLUENCE_TOKEN}",
                "wiki.telechips.com",
                "--update-if-exists"
            ],
            "options": {
                "env": {
                  "PYTHONUTF8": "1",
                  "PYTHONIOENCODING": "utf-8",
                }
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "현재 열린 Markdown 파일을 Confluence에 업로드합니다. (Python 워크플로우)"
        },
        {
            "label": "Convert MD to HTML",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/.vscode/scripts/convert_obsidian_md_to_html.py",
                "${file}"
            ],
            "options": {
                "env": {
                  "PYTHONUTF8": "1",
                  "PYTHONIOENCODING": "utf-8",
                }
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "현재 Markdown 파일을 HTML로 변환합니다."
        },
        {
            "label": "Fix Image Filenames",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/.vscode/scripts/space_fill.py",
                "${fileDirname}",
                "--apply"
            ],
            "options": {
                "env": {
                  "PYTHONUTF8": "1",
                  "PYTHONIOENCODING": "utf-8",
                }
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "현재 폴더의 이미지 파일명에서 공백을 하이픈으로 변경합니다."
        }
    ]
}